<section style="padding: 100px 0;" class="py-5 container">
  <form action="/property/add" method="POST" enctype="multipart/form-data">

    <input type="hidden" name="addedBy" value="{{user._id}}" class="form-control form-control-lg" />

    <div class="form-outline mb-4">
      <label class="form-label">Title</label>
      <input type="text" name="title" class="form-control form-control-lg" required/>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Price</label>
      <input type="number" min="0" step="0.01" name="price" class="form-control form-control-lg" required/>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Street</label>
      <input type="text" name="street" class="form-control form-control-lg" required/>
    </div>

    <div class="form-group">
      <label>Select City</label>
      <select class="form-control" name="city">
        {{#each cities}}
        <option>{{this}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Pin</label>
      <input type="text" name="pin" class="form-control form-control-lg" required/>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Bedrooms</label>
      <input type="number" min="1" step="1" name="bedroom" class="form-control form-control-lg" required/>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Livingrooms</label>
      <input type="number" min="1" step="1" name="livingroom" class="form-control form-control-lg" required/>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Kitchens</label>
      <input type="number" min="1" step="1" name="kitchen" class="form-control form-control-lg" required/>
    </div>

    <div class="form-outline mb-4">
      <label class="form-label">Bathrooms</label>
      <input type="number" min="1" step="1" name="bathroom" class="form-control form-control-lg" required/>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" class="form-control" id="description" rows="3"></textarea>
    </div>

    <div class="form-group">
      <label>Property Type</label>
      <select class="form-control" name="type">
        <option>Apartment</option>
        <option>Building</option>
        <option>Office Space</option>
      </select>
    </div>

    <div class="form-group">
      <label for="coverImage">Property Image</label>
      <input name="coverImage" type="file" class="form-control-file" id="coverImage" required>
    </div>

    <!-- Submit button -->
    <input type="submit" value="Add" class="btn btn-primary btn-lg btn-block">

  </form>
</section>